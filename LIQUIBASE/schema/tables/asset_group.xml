<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
	
    <changeSet id="assetgroup" author="johlyn">
    	<createTable tableName="assetgroup">
    		<column name="group_id" type="BIGINT">
    			<constraints primaryKey="true" primaryKeyName="filtgrp_pk"/>
    		</column>
            <column name="group_guid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
    		<column name="group_name" type="varchar(80)">
				<constraints nullable="false" />
			</column>
            <column name="group_dynamic" type="boolean" defaultValueBoolean="true"/>
    		<column name="group_global" type="boolean" defaultValueBoolean="true"/>
    		<column name="group_user_id" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
    		<column name="group_updattim" type="TIMESTAMP WITH TIME ZONE"/>
    		<column name="group_upuser" type="varchar(60)"/>
            <column name="group_archived" type="boolean" defaultValueBoolean="false"/>
    	</createTable>

		<createSequence sequenceName="group_id_seq"/>

		<rollback>
    		<dropTable tableName="assetgroup" cascadeConstraints="true"/>
    	</rollback>
    </changeSet>
	
	<changeSet author="nhily" id="Remove old sequence">
		<dropSequence sequenceName="group_id_seq"/>
	</changeSet>
	
	<changeSet author="nhily" id="modify data type time without time zone">
		<modifyDataType
            columnName="group_updattim"
            newDataType="TIMESTAMP WITHOUT TIME ZONE"
            tableName="assetgroup"/>
	</changeSet>
    
</databaseChangeLog>