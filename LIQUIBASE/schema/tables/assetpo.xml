<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="roblar" id="assetpo-01">
        <createTable tableName="assetpo">
            <column name="assetpo_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="assetpo_pk" />
            </column>
            <column name="assetpo_code" type="VARCHAR(36)"/>
            <column name="assetpo_name" type="VARCHAR(36)"/>
            <column name="assetpo_address" type="VARCHAR(36)"/>
            <column name="assetpo_zipcode" type="INT"/>
            <column name="assetpo_city" type="VARCHAR(26)" />
            <column name="assetpo_phone" type="VARCHAR(20)" />
            <column name="assetpo_mobile" type="VARCHAR(20)" />
            <column name="assetpo_fax" type="VARCHAR(20)" />
        </createTable>

        <createSequence sequenceName="assetpo_id_seq" minValue="100"/>

        <rollback>
            <dropTable tableName="assetpo" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
