<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <preConditions onFail="WARN">
        <not>
            <indexExists indexName="asset.assethist_asset_id_idx"/>
        </not>
    </preConditions>

    <changeSet author="grigomi" id="Add index on asset id for Fleet sync update step">
        <createIndex tableName="assethistory" indexName="assethist_asset_id_idx">
            <column name="assethist_asset_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="assethistory" indexName="assethist_asset_id_idx"/>
        </rollback>
    </changeSet>
</databaseChangeLog>